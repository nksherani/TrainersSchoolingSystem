@model IEnumerable<TrainersSchoolingSystem.Models.PaidFee>

@{
    ViewBag.Title = "Index";
}
@using TrainersSchoolingSystem.Utils;
<h2>Paid/Unpaid Fee Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChallanNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalculatedAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceivedAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UpdatedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChallanNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CalculatedAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceivedAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Constants.months[(item.Month.HasValue ? item.Month.Value : 1) - 1].Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrainerUser.Username)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TrainerUser1.Username)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PaidFeeId }) |
            @Html.ActionLink("Details", "Details", new { id = item.PaidFeeId }) |
            @*@Html.ActionLink("Delete", "Delete", new { id = item.PaidFeeId })*@
        </td>
    </tr>
}

</table>
