<div id="example">
    <div class="demo-section k-content wide">
        <div id="classwisecountchart" class="small-chart"></div>
        
    </div>
    <style>
        .k-chart.small-chart {
            display: inline-block;
            width: 290px;
            height: 290px;
        }
    </style>
    <script>
        function createSmallChart() {
            $("#classwisecountchart").kendoChart({
                dataSource: {
                    transport: {
                        read: {
                            url: "../Reports/GetClasswiseCount",
                            dataType: "json"
                        }
                    }
                    
                },
                title: {
                    text: "Classwise Count",
                    position: "bottom"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "pie"
                },
                series: [{
                    field: "StudentCount",
                    categoryField: "ClassName",
                    padding: 0
                }],
                tooltip: {
                    visible: true,
                    format: "N0"//,
                    //template: "#= StudentCount # - #= kendo.format('{0:P}', percentage)#"
                }
            });
        }



        $(document).ready(createSmallChart);
        $(document).bind("kendo:skinChange", createSmallChart);
    </script>
</div>
