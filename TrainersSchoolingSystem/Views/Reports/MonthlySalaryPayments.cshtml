<div id="example">
    <div class="demo-section k-content wide">
        <div id="salarychart"></div>
    </div>
    <script>
        function createChart() {
            $("#salarychart").kendoChart({
                dataSource: {
                    transport: {
                        read: {
                            url: "../Reports/GetMonthlySalaryPayments",
                            dataType: "json"
                        }
                    }
                    //,sort: {
                    //    field: "X",
                    //    dir: "asc"
                    //}
                },
                title: {
                    text: "Monthly Salary Payments",
                    position:"bottom"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "column"
                },
                series:
                    [{
                        field: "Y",
                        categoryField: "X",
                        name: "Salaries in Rupees"
                    }],
                categoryAxis: {
                    labels: {
                        rotation: -90
                    },
                    majorGridLines: {
                        visible: false
                    }
                },
                valueAxis: {
                    labels: {
                        format: "Rs."
                    },
                    majorUnit: 10000,
                    line: {
                        visible: false
                    }
                },
                tooltip: {
                    visible: true,
                    format: "N0"
                }
            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
    </script>
</div>